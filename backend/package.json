{
  "name": "cloudide-plus-backend",
  "version": "1.0.0",
  "description": "Backend API server for CloudIDE+ - A cloud-based IDE inspired by Visual Studio Code",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "copyfiles -u 1 src/**/*.json dist/",
    "setup": "npm install && npm run build"
  },
  "keywords": [
    "ide",
    "cloud",
    "api",
    "nodejs",
    "express",
    "firebase",
    "google-cloud",
    "monaco-editor"
  ],
  "author": "CloudIDE+ Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "google-auth-library": "^9.4.1",
    "googleapis": "^129.0.0",
    "multer": "^1.4.5-lts.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "mime-types": "^2.1.35",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/joi": "^17.2.3",
    "@types/uuid": "^9.0.7",
    "@types/mime-types": "^2.1.4",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "rimraf": "^5.0.5",
    "copyfiles": "^2.4.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/cloudide-plus.git",
    "directory": "backend"
  },
  "bugs": {
    "url": "https://github.com/your-username/cloudide-plus/issues"
  },
  "homepage": "https://github.com/your-username/cloudide-plus/tree/main/backend#readme"
}

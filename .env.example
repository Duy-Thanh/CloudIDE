# CloudIDE+ Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# CORE CLOUDIDE+ SETTINGS
# ===========================================

# Code Server Configuration
CODE_SERVER_PASSWORD=cloudide123
SUDO_PASSWORD=cloudide123

# Environment Mode (development, production, staging)
CLOUDIDE_MODE=development
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database
POSTGRES_PASSWORD=cloudide123
DATABASE_URL=postgresql://cloudide:cloudide123@postgres:5432/cloudide

# Redis Cache
REDIS_URL=redis://redis:6379

# ===========================================
# GOOGLE CLOUD PLATFORM
# ===========================================

# Google Cloud Project
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Google Cloud Storage
GOOGLE_CLOUD_STORAGE_BUCKET=your-storage-bucket

# Google Drive API (for file sync)
GOOGLE_DRIVE_CLIENT_ID=your-google-drive-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-drive-client-secret

# Google OAuth (for authentication)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================

# Firebase Project
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-firebase-project-id.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-firebase-project-id-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id

# Firebase Admin SDK (server-side)
FIREBASE_ADMIN_SDK_PATH=/home/coder/.config/firebase/service-account.json

# ===========================================
# GEMINI AI CONFIGURATION
# ===========================================

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# OpenAI API (fallback)
OPENAI_API_KEY=your-openai-api-key

# ===========================================
# CLOUDFLARE CONFIGURATION
# ===========================================

# Cloudflare API
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Cloudflare Workers
CLOUDFLARE_WORKERS_SUBDOMAIN=your-workers-subdomain

# ===========================================
# DEPLOYMENT SERVICES
# ===========================================

# Vercel
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id

# Netlify
NETLIFY_TOKEN=your-netlify-token
NETLIFY_SITE_ID=your-netlify-site-id

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# ===========================================
# CLOUD STORAGE PROVIDERS
# ===========================================

# Dropbox
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret

# Microsoft OneDrive
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
ONEDRIVE_CLIENT_SECRET=your-onedrive-client-secret

# ===========================================
# ZOHO SERVICES
# ===========================================

# Zoho SalesIQ (Customer Support)
ZOHO_SALESIQ_TOKEN=your-zoho-salesiq-token
ZOHO_SALESIQ_WIDGET_CODE=your-zoho-salesiq-widget-code

# Zoho Desk (Help Desk)
ZOHO_DESK_API_TOKEN=your-zoho-desk-api-token
ZOHO_DESK_ORG_ID=your-zoho-desk-org-id

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Grafana
GRAFANA_PASSWORD=admin

# Google Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Firebase Analytics
FIREBASE_ANALYTICS_ENABLED=true

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================

# Google reCAPTCHA
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# JWT Secret (for session management)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session Secret
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ===========================================
# EMAIL SERVICES
# ===========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@cloudide.dev

# SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug Mode
DEBUG=cloudide:*

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable Hot Reload
HOT_RELOAD=true

# Enable Source Maps
SOURCE_MAPS=true

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# Domain Configuration
DOMAIN=your-domain.com
SSL_ENABLED=true

# CDN Configuration
CDN_URL=https://cdn.your-domain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# OPTIONAL INTEGRATIONS
# ===========================================

# GitHub Integration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# GitLab Integration
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret

# Slack Integration
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Discord Integration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id

# ===========================================
# BACKUP & SYNC SETTINGS
# ===========================================

# Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Auto Sync Interval (in minutes)
SYNC_INTERVAL=5

# Max File Size for Sync (in MB)
MAX_SYNC_FILE_SIZE=100

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================

# Worker Threads
WORKER_THREADS=4

# Memory Limit (in MB)
MEMORY_LIMIT=2048

# Cache TTL (in seconds)
CACHE_TTL=3600

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Features
FEATURE_CLOUD_STORAGE=true
FEATURE_ONE_CLICK_DEPLOY=true
FEATURE_AI_ASSISTANT=true
FEATURE_COLLABORATION=true
FEATURE_ENVIRONMENT_MANAGER=true
FEATURE_MONITORING=true
FEATURE_ANALYTICS=true

# ===========================================
# EXPERIMENTAL FEATURES
# ===========================================

# Enable Experimental Features
EXPERIMENTAL_FEATURES=false
BETA_FEATURES=false

# WebContainer Support
WEBCONTAINER_ENABLED=false

# PWA Support
PWA_ENABLED=true
